<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/contactRowCl"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TextView -->
    <TextView
        android:id="@+id/contactNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/contactName"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/phoneIv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/phone"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/contactNameTv"
        app:layout_constraintBottom_toBottomOf="@id/contactNameTv"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- Horizontal line -->
    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DDDDDD"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/contactNameTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
